{
  "name": "glm-router",
  "display_name": "智谱GLM (路由器-思考模式)",
  "provider": "zhipu",
  "description": "通过本地路由器服务启用思考能力的GLM-4系列模型",
  "requires_router": true,
  "thinking_enabled": true,
  "env": {
    "ANTHROPIC_AUTH_TOKEN": "在此处输入您的GLM API密钥",
    "ANTHROPIC_BASE_URL": "http://127.0.0.1:3456",
    "API_TIMEOUT_MS": "6000000",
    "ANTHROPIC_DEFAULT_OPUS_MODEL": "glm-4.6-thinking",
    "ANTHROPIC_DEFAULT_SONNET_MODEL": "glm-4.6-thinking",
    "ANTHROPIC_DEFAULT_HAIKU_MODEL": "glm-4.5-air-thinking"
  },
  "models": {
    "glm-4.6-thinking": "思考模式 - 支持推理和反思",
    "glm-4.5-air-thinking": "思考模式 - 轻量级推理",
    "glm-4-flash-thinking": "思考模式 - 极速推理"
  },
  "default_model": "glm-4.6-thinking",
  "router_template": {
    "APIKEY": "",
    "PROXY_URL": "",
    "HOST": "127.0.0.1",
    "PORT": 3456,
    "LOG": true,
    "LOG_LEVEL": "info",
    "API_TIMEOUT_MS": 6000000,
    "Providers": [
      {
        "name": "zhipu",
        "api_base_url": "https://open.bigmodel.cn/api/paas/v4/chat/completions",
        "api_key": "${ANTHROPIC_AUTH_TOKEN}",
        "models": [
          "glm-4-plus",
          "glm-4-0520",
          "glm-4-air",
          "glm-4-airx",
          "glm-4-flash"
        ],
        "transformer": {
          "use": []
        }
      }
    ],
    "Router": {
      "default": "zhipu,glm-4-plus",
      "background": "zhipu,glm-4-flash",
      "think": "zhipu,glm-4-plus",
      "longContext": "zhipu,glm-4-plus",
      "longContextThreshold": 60000,
      "webSearch": "zhipu,glm-4-plus",
      "image": "zhipu,glm-4-plus"
    }
  },
  "metadata": {
    "created_at": "2024-01-01T00:00:00Z",
    "updated_at": "2024-01-01T00:00:00Z",
    "version": "2.0",
    "note": "需要运行 claude-code-router 服务"
  }
}
