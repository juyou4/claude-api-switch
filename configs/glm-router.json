{
  "name": "glm-router",
  "display_name": "智谱GLM-4.6 (Anthropic原生API-思考模式)",
  "provider": "zhipu",
  "description": "使用智谱Anthropic原生API，支持GLM-4.6思考模式和推理能力",
  "requires_router": true,
  "thinking_enabled": true,
  "env": {
    "ANTHROPIC_AUTH_TOKEN": "在此处输入您的GLM API密钥",
    "ANTHROPIC_BASE_URL": "http://127.0.0.1:3456",
    "API_TIMEOUT_MS": "6000000",
    "ANTHROPIC_DEFAULT_OPUS_MODEL": "glm-4.6",
    "ANTHROPIC_DEFAULT_SONNET_MODEL": "glm-4.6",
    "ANTHROPIC_DEFAULT_HAIKU_MODEL": "glm-4.5-air"
  },
  "models": {
    "glm-4.6": "GLM-4.6 旗舰模型 - 代码能力对齐Claude Sonnet 4，原生支持思考模式",
    "glm-4.5-air": "GLM-4.5 Air - 轻量级模型，快速响应"
  },
  "default_model": "glm-4.6",
  "router_template": {
    "APIKEY": "",
    "PROXY_URL": "",
    "HOST": "127.0.0.1",
    "PORT": 3456,
    "LOG": true,
    "LOG_LEVEL": "info",
    "API_TIMEOUT_MS": 6000000,
    "Providers": [
      {
        "name": "zhipu",
        "api_base_url": "https://open.bigmodel.cn/api/anthropic",
        "api_key": "${ANTHROPIC_AUTH_TOKEN}",
        "models": [
          "glm-4.6",
          "glm-4.5-air"
        ],
        "transformer": {
          "use": ["Anthropic"]
        }
      }
    ],
    "Router": {
      "default": "zhipu,glm-4.6",
      "background": "zhipu,glm-4.5-air",
      "think": "zhipu,glm-4.6",
      "longContext": "zhipu,glm-4.6",
      "longContextThreshold": 60000,
      "webSearch": "zhipu,glm-4.6",
      "image": "zhipu,glm-4.6"
    }
  },
  "metadata": {
    "created_at": "2024-01-01T00:00:00Z",
    "updated_at": "2024-01-01T00:00:00Z",
    "version": "2.0",
    "note": "需要运行 claude-code-router 服务"
  }
}
